<Window x:Class="MH.UI.Tests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200" Topmost="True"
        x:Name="root">
  <Window.Resources>
    <PathGeometry x:Key="TreeArrow" Figures="M0,0 L0,6 L6,0 z" />
  </Window.Resources>
  <Grid Background="#FF252525">

    <ItemsControl ItemsSource="{Binding TestList, ElementName=root}">
      <ItemsControl.Template>
        <ControlTemplate>
          <ScrollViewer>
            <ItemsPresenter />
          </ScrollViewer>
        </ControlTemplate>
      </ItemsControl.Template>
      
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <!--<Border BorderThickness="1" BorderBrush="Black" Width="30" Height="30" Background="GreenYellow">
            <mhc:Icon Size="20" Fill="Blue" Source="{StaticResource TreeArrow}" />
          </Border>-->
          <StackPanel>
            <mhc:IconButton Background="White" Source="{StaticResource TreeArrow}" Size="20" Fill="LightBlue" ToolTip="Test" />
            <mhc:IconToggleButton Background="White" Source="{StaticResource TreeArrow}" Size="20" Fill="LightBlue" ToolTip="Test" />
          </StackPanel>
         </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
    
    <!--<StackPanel Orientation="Horizontal" >
      <mhc:IconButton Background="White" Source="{StaticResource TreeArrow}" Size="30" Fill="GreenYellow" />
      <mhc:IconButton Background="White" Source="{StaticResource TreeArrow}" Size="20" Fill="LightBlue" ToolTip="Test" />
    </StackPanel>-->
    
    
  </Grid>
</Window>
