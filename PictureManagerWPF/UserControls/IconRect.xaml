<UserControl x:Class="PictureManager.UserControls.IconRect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Ir">
    <Rectangle Width="18" 
               Height="18" 
               VerticalAlignment="Center" 
               Fill="{Binding ElementName=Ir, 
                              Path=IconName, 
                              Converter={StaticResource IconNameToBrushConverter}}">
      <Rectangle.OpacityMask>
        <VisualBrush Stretch="Uniform" 
                     Visual="{Binding ElementName=Ir, 
                                      Path=IconName, 
                                      Converter={StaticResource IconNameToStaticResourceConverter}}" />
      </Rectangle.OpacityMask>
    </Rectangle>
</UserControl>
