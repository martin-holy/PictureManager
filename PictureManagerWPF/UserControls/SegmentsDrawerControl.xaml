<UserControl x:Class="PictureManager.UserControls.SegmentsDrawerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:PictureManager.CustomControls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
  
  <Grid Background="{StaticResource ColorBrushBackground}">
    <cc:VirtualizingWrapPanel x:Name="SegmentsGrid" ScrollViewerSpeedFactor="1" Margin="2,0,0,0">
      <cc:VirtualizingWrapPanel.ItemDataTemplate>
        <DataTemplate>
          <cc:SegmentControl DataContext="{Binding}" Selected="OnSegmentSelected" />
        </DataTemplate>
      </cc:VirtualizingWrapPanel.ItemDataTemplate>
    </cc:VirtualizingWrapPanel>
  </Grid>
</UserControl>