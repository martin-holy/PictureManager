<UserControl
  x:Class="PictureManager.UserControls.MediaViewer"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cc="clr-namespace:PictureManager.CustomControls"
  xmlns:uc="clr-namespace:PictureManager.UserControls"
  xmlns:pmd="clr-namespace:PictureManager.Domain;assembly=PictureManager.Domain"
  xmlns:views="clr-namespace:PictureManager.Views">

  <Grid
    Background="Transparent"
    DataContext="{Binding RelativeSource=
                 {RelativeSource FindAncestor, AncestorType={x:Type uc:MediaViewer}}}">

    <Grid.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary Source="../Views/PresentationPanelV.xaml" />
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </Grid.Resources>

    <!-- Full Media Image -->
    <Grid
      Focusable="True"
      Visibility="{Binding Current.MediaType,
                   Converter={StaticResource AllToVisibilityConverter},
                   ConverterParameter={x:Static pmd:MediaType.Image}}" >

      <views:ZoomImageBoxV
        x:Name="FullImage" />
      
      <!-- Presentation Panel -->
      <ContentPresenter
        Content="{Binding PresentationPanel}" />
    </Grid>

    <!-- Full Media Video -->
    <cc:VideoPlayer
      x:Name="FullVideo"
      Visibility="{Binding Current.MediaType,
                   Converter={StaticResource AllToVisibilityConverter}, 
                   ConverterParameter={x:Static pmd:MediaType.Video}}" />
    
    <!-- Segment Rects -->
    <uc:SegmentRectsControl
      x:Name="SegmentRects"
      MediaItem="{Binding Current}"
      Zoom="{Binding ActualZoom, ElementName=FullImage}"
      Width="{Binding ActualWidth, ElementName=FullImage}"
      Height="{Binding ActualHeight, ElementName=FullImage}"
      Visibility="{Binding PresentationPanel.AreSegmentsRectsOn,
                   Converter={StaticResource AllToVisibilityConverter}}">
      
      <uc:SegmentRectsControl.RenderTransform>
        <TranslateTransform
          X="{Binding TransformX, ElementName=FullImage}"
          Y="{Binding TransformY, ElementName=FullImage}" />
      </uc:SegmentRectsControl.RenderTransform>
    </uc:SegmentRectsControl>

  </Grid>
</UserControl>
