<Window x:Class="PictureManager.WTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PictureManager"
        mc:Ignorable="d"
        Title="WTest" Height="250" Width="300" Background="#007ACC">
  <StackPanel Margin="10" Orientation="Horizontal">
    <Grid>
      <Border BorderThickness="3" BorderBrush="Black" Height="20" MinWidth="20" CornerRadius="5">
        <Border.Effect>
          <DropShadowEffect BlurRadius="5" Color="Black" Opacity="0.7" ShadowDepth="3" />
        </Border.Effect>
      </Border>
      <Border BorderThickness="1" BorderBrush="Black" Height="20" MinWidth="20" CornerRadius="5" >
        <Border.Background>
          <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#8EC163" Offset="0"/>
            <GradientStop Color="#FF5AA619" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>
        
        <Label Content="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2,0" Foreground="Black" />
      </Border>
    </Grid>





  </StackPanel>
</Window>
