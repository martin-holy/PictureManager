<Window x:Class="PictureManager.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="150" Width="500" FontSize="13.333" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" ShowInTaskbar="False" Foreground="White"
        BorderThickness="1" BorderBrush="Black" WindowStyle="None" Background="#FF252525">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="20" />
      <RowDefinition Height="20" />
      <RowDefinition Height="20" />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Text="Picture Manager" FontWeight="Bold" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" />
    <TextBlock Grid.Row="1" x:Name="VersionInfo" Text="" HorizontalAlignment="Center" />
    <TextBlock Grid.Row="2" x:Name="InfoText" Text="Loading..." HorizontalAlignment="Center" />
    <ProgressBar Grid.Row="3" IsIndeterminate="True" Margin="4,0" Height="10" />
  </Grid>
</Window>
