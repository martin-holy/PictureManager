<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:pm="clr-namespace:PictureManager"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:mhuic="clr-namespace:MH.UI.Controls;assembly=MH.UI">

  <DataTemplate x:Key="PM.Views.MainTabsV" DataType="{x:Type mhuic:TabControl}">
    <DataTemplate.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary Source="MediaItemsViewV.xaml"/>
          <ResourceDictionary Source="PeopleViewV.xaml"/>
          <ResourceDictionary Source="SegmentsViewV.xaml"/>
          <ResourceDictionary Source="ViewerV.xaml"/>
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </DataTemplate.Resources>

    <TabControl
      Style="{StaticResource MH.Styles.BaseControls.TabControl-Slot}"
      TabStripPlacement="Left">

      <mhc:Slots.List>
        <mhc:Slot Name="TabStripSlot" Placement="Top">
          <mhc:Slot.Content>
            <mhc:IconButton
              Icon="{StaticResource IconPlus}"
              Width="24"
              Height="24"
              Padding="6"
              ToolTip="Add Media Items View Tab"
              HorizontalAlignment="Center"
              Command="{Binding MediaItemsViews.AddViewCommand, Source={x:Static pm:App.Core}}"/>
          </mhc:Slot.Content>
        </mhc:Slot>
      </mhc:Slots.List>
    </TabControl>
  </DataTemplate>
</ResourceDictionary>