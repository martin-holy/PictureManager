<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mhuInt="clr-namespace:MH.Utils.Interfaces;assembly=MH.Utils"
  xmlns:mhConv="clr-namespace:MH.UI.WPF.Converters;assembly=MH.UI.WPF">

  <DataTemplate x:Key="PM.Views.List.IconTextV" DataType="{x:Type mhuInt:IIconText}">
    <DockPanel>
      <Path
        DockPanel.Dock="Left"
        Style="{StaticResource MH.Styles.Icon}"
        Data="{Binding Converter={mhConv:TypeToIconConverter}}"
        Fill="{Binding Converter={mhConv:TypeToIconColorConverter}}"/>
      
      <TextBlock
        Style="{StaticResource PM.Styles.TextBlockBase}"
        Text="{Binding Path=(mhuInt:ITitled.GetTitle)}"/>
    </DockPanel>
  </DataTemplate>
</ResourceDictionary>