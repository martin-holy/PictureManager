<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="clr-namespace:PictureManager.ViewModels"
  xmlns:pm="clr-namespace:PictureManager"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:rd="clr-namespace:PictureManager.ResourceDictionaries"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors">

  <DataTemplate DataType="{x:Type vm:TreeViewCategoriesVM}">
    <DataTemplate.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary Source="../ResourceDictionaries/CustomControlStyles/CatTreeViewStyle.xaml" />
          <ResourceDictionary Source="TreeViewSearchV.xaml" />
          <ResourceDictionary Source="TreeItemV.xaml" />
          <ResourceDictionary Source="MediaItemSizeTreeV.xaml" />
          <ResourceDictionary Source="RatingTreeV.xaml" />
          <ResourceDictionary Source="TreeContextMenus.xaml" />
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </DataTemplate.Resources>
    
    <Grid Background="{StaticResource ColorBrushBackground}">

      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <Border
        Grid.Row="0"
        BorderThickness="0,0,0,4"
        BorderBrush="{StaticResource AccentColorBrush4}">
        
        <DockPanel Height="34">

          <!-- TreeView Categories Navigation Bar -->
          <ItemsControl
            ItemsSource="{Binding Model.Items}"
            DockPanel.Dock="Left">

            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <mhc:IconButton
                  Size="22"
                  ShowShadow="False"
                  ToolTip="{Binding Name}"
                  Command="{Binding TreeViewCategoriesM.ScrollToCommand,
                            Source={x:Static pm:App.Core}}"
                  CommandParameter="{Binding}"
                  Source="{Binding IconName,
                           Converter={StaticResource ResourceConverter}}"
                  Fill="{Binding IconName,
                         Converter={StaticResource ResourceConverter},
                         ConverterParameter={x:Static rd:Dictionaries.IconNameToBrush}}" />
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

          <StackPanel
            DockPanel.Dock="Right"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <!-- Search -->
            <mhc:IconButton
              Size="22"
              Source="{StaticResource IconMagnify}"
              ToolTip="Search"
              Command="{Binding Model.ShowSearchCommand}"
              ShowShadow="False" />

            <!-- Button to pin slide panel -->
            <mhc:IconToggleButton
              Command="{Binding ToggleIsPinnedCommand}"
              Source="{StaticResource IconPin}"
              Size="14"
              IsThreeState="False"
              ShowShadow="False"
              IsChecked="{Binding Model.IsPinned}"
              ToolTip="Pin panel" />
          </StackPanel>
        </DockPanel>
      </Border>

      <!-- CatTreeView Categories -->
      <mhc:CatTreeView
        Grid.Row="1"
        ItemsSource="{Binding Model.Items}"
        ScrollToItem="{Binding Model.ScrollToItem}">
        
        <mhc:CatTreeView.Style>
          <Style
            TargetType="{x:Type mhc:CatTreeView}"
            BasedOn="{StaticResource CatTreeView}">
            
            <!-- BlurEffect when Search is visible -->
            <Style.Triggers>
              <DataTrigger
                Binding="{Binding Model.TreeViewSearchM.IsVisible}"
                Value="True">

                <Setter Property="Effect">
                  <Setter.Value>
                    <BlurEffect
                      Radius="4"
                      KernelType="Gaussian" />
                  </Setter.Value>
                </Setter>
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </mhc:CatTreeView.Style>
        
        <b:Interaction.Triggers>
          <b:EventTrigger EventName="MouseLeftButtonUp">
            <b:InvokeCommandAction
              Command="{Binding SelectCommand}"
              PassEventArgsToCommand="True" />
          </b:EventTrigger>
        </b:Interaction.Triggers>
        
      </mhc:CatTreeView>

      <!-- Search -->
      <ContentPresenter
        Grid.Row="1"
        Content="{Binding Model.TreeViewSearchM}" />

    </Grid>
  </DataTemplate>
    
</ResourceDictionary>