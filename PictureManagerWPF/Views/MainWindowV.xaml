<mhc:CustomWindow
  x:Class="PictureManager.Views.MainWindowV"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:pm="clr-namespace:PictureManager"
  DataContext="{Binding Source={x:Static pm:App.Core}}"
  Style="{StaticResource MH.Styles.Controls.CustomWindow}"
  IsFullScreen="{Binding VM.MainWindow.IsFullScreen, Mode=TwoWay}"
  Title="Picture Manager"
  WindowState="Maximized"
  CanResize="True"
  CanFullScreen="True"
  UseLayoutRounding="True"
  SnapsToDevicePixels="True"
  FontSize="14">

  <Window.InputBindings>
    <KeyBinding Modifiers="Control" Key="R" Command="{Binding VM.RotateMediaItemsCommand}"/>
    <KeyBinding Modifiers="Control" Key="K" Command="{Binding MediaItemsM.CommentCommand}"/>
    <KeyBinding Key="F2" Command="{Binding MediaItemsM.RenameCommand}"/>
    <KeyBinding Key="Delete" Command="{Binding MediaItemsM.DeleteCommand}"/>
    <KeyBinding Key="Esc" Command="{Binding VM.MainWindow.SwitchToBrowserCommand}"/>
    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding VM.MainWindow.SwitchToBrowserCommand}"/>
  </Window.InputBindings>

  <b:Interaction.Triggers>
    <b:EventTrigger EventName="Closing">
      <b:InvokeCommandAction Command="{Binding VM.AppClosingCommand}"/>
    </b:EventTrigger>
  </b:Interaction.Triggers>

  <mhc:SlidePanelsGridHost SlidePanelsGrid="{Binding VM.MainWindow.SlidePanelsGrid}"/>
</mhc:CustomWindow>