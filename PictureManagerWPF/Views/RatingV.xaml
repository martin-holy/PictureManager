<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:m="clr-namespace:PictureManager.Domain.Models;assembly=PictureManager.Domain"
  xmlns:pmConv="clr-namespace:PictureManager.Converters">

  <DataTemplate DataType="{x:Type m:RatingM}">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>

      <Grid.Resources>
        <Style TargetType="{x:Type Path}" BasedOn="{StaticResource MH.Styles.Icon}">
          <Setter Property="Data" Value="{StaticResource IconStar}"/>
        </Style>
      </Grid.Resources>

      <Path Grid.Column="0" Fill="{Binding Value, Converter={pmConv:RatingConverter}, ConverterParameter=0}"/>
      <Path Grid.Column="1" Fill="{Binding Value, Converter={pmConv:RatingConverter}, ConverterParameter=1}"/>
      <Path Grid.Column="2" Fill="{Binding Value, Converter={pmConv:RatingConverter}, ConverterParameter=2}"/>
      <Path Grid.Column="3" Fill="{Binding Value, Converter={pmConv:RatingConverter}, ConverterParameter=3}"/>
      <Path Grid.Column="4" Fill="{Binding Value, Converter={pmConv:RatingConverter}, ConverterParameter=4}"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>