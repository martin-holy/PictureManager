              <b:InvokeCommandAction Command="{Binding RangeChangedCommand}" />
            </b:EventTrigger>
          </b:Interaction.Triggers>
        </mah:RangeSlider>-->
      </Grid>
    </StackPanel>
  </HierarchicalDataTemplate>

</ResourceDictionary>