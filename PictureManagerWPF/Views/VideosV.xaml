<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:wpfu="clr-namespace:MH.UI.WPF.Utils;assembly=MH.UI.WPF"
  xmlns:mim="clr-namespace:PictureManager.Domain.Models.MediaItems;assembly=PictureManager.Domain">

  <DataTemplate DataType="{x:Type mim:VideosM}">
    <DataTemplate.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <wpfu:CachedResourceDictionary Source="VideoItemThumbnailV.xaml"/>
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </DataTemplate.Resources>
    
    <Grid Background="{StaticResource ColorBrushBackground}">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <!-- Control Panel -->
      <ContentPresenter
        Content="{Binding MediaPlayer}"
        ContentTemplate="{StaticResource MH.Styles.Controls.MediaPlayerControlPanel}"/>

      <mhc:CollectionView Grid.Row="1" View="{Binding CurrentVideoItems}"/>
    </Grid>
  </DataTemplate>

</ResourceDictionary>