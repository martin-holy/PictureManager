<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tree="clr-namespace:PictureManager.ViewModels.Tree"
                    xmlns:uc="clr-namespace:PictureManager.UserControls">

  <HierarchicalDataTemplate DataType="{x:Type tree:CategoryGroupTreeVM}" ItemsSource="{Binding Items}">
    <StackPanel Orientation="Horizontal"
                Margin="{Binding Converter={StaticResource CatTreeViewMarginConverter}}">
      <uc:CategoryGroupIconControl Category="{Binding BaseVM.Model.Category}" />
      <TextBlock Style="{StaticResource TreeItemTitle}" Text="{Binding BaseVM.Model.Name}" />
    </StackPanel>
  </HierarchicalDataTemplate>

</ResourceDictionary>