  <FontFamily x:Key="DefaultFont">Segoe UI, Lucida Sans Unicode, Verdana</FontFamily>
  <FontFamily x:Key="SymbolFont">Segoe UI Symbol</FontFamily>

  <system:Double x:Key="ButtonFontSize">10</system:Double>
