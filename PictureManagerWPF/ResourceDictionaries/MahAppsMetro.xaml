  <Style x:Key="FloatingMessageContainerStyle" TargetType="{x:Type ContentControl}">
    <Setter Property="UIElement.Focusable" Value="false"/>
    <Setter Property="UIElement.IsHitTestVisible" Value="false"/>
    <Setter Property="Control.IsTabStop" Value="false"/>
    <Setter Property="FrameworkElement.Margin" Value="5 0"/>
    <Setter Property="UIElement.Visibility" Value="Collapsed"/>
  </Style>
  <Style x:Key="PathIconContentControlStyle" TargetType="{x:Type ContentControl}">
    <Setter Property="FrameworkElement.FlowDirection" Value="LeftToRight"/>
    <Setter Property="FrameworkElement.Height" Value="16"/>
    <Setter Property="FrameworkElement.HorizontalAlignment" Value="Center"/>
    <Setter Property="Control.IsTabStop" Value="false"/>
    <Setter Property="Control.Padding" Value="0"/>
    <Setter Property="UIElement.SnapsToDevicePixels" Value="false"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ContentControl}">
          <Viewbox Margin="{TemplateBinding Control.Padding}" UseLayoutRounding="true">
            <Path Fill="{TemplateBinding Control.Foreground}"
                  SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" Stretch="Uniform"
                  UseLayoutRounding="false"
                  Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay, Converter={converters:NullToUnsetValueConverter}}"/>
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="FrameworkElement.UseLayoutRounding" Value="false"/>
    <Setter Property="FrameworkElement.VerticalAlignment" Value="Center"/>
    <Setter Property="FrameworkElement.Width" Value="16"/>
  </Style>
