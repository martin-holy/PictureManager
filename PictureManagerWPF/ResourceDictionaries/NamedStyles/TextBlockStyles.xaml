<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pm="clr-namespace:PictureManager">

  <!-- STextBlock -->
  <Style x:Key="STextBlock" TargetType="TextBlock">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="HorizontalAlignment" Value="Center" />
  </Style>

  <Style x:Key="TreeItemTitle" TargetType="{x:Type TextBlock}">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Margin" Value="5,0,0,0" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <Style
    x:Key="TreeItemKeywordsPicCount"
    TargetType="{x:Type TextBlock}">

    <Setter
      Property="Visibility"
      Value="Visible" />
    <Setter
      Property="VerticalAlignment"
      Value="Center" />
    <Setter
      Property="Margin"
      Value="5,0,0,0" />
    <Setter
      Property="Padding"
      Value="5,0" />
    <Setter
      Property="Background"
      Value="{DynamicResource AccentColorBrush4}" />

    <Setter Property="Text">
      <Setter.Value>
        <MultiBinding Converter="{StaticResource MarkedTagsItemsCountConverter}">
          <Binding
            Path="TreeViewCategoriesVM.Model.MarkedTags"
            Source="{x:Static pm:App.Ui}" />
          <Binding />
        </MultiBinding>
      </Setter.Value>
    </Setter>

    <Style.Triggers>
      <DataTrigger
        Binding="{Binding Text,
                  Converter={StaticResource AllToBoolConverter},
                  RelativeSource={RelativeSource Self}}"
        Value="False">
        <Setter
          Property="Visibility"
          Value="Collapsed"/>
      </DataTrigger>
    </Style.Triggers>
  </Style>

</ResourceDictionary>