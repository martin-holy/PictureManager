<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="../BaseControlStyles/ButtonStyles.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <!-- DialogButton -->
  <Style x:Key="DialogButton" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
    <Setter Property="MinWidth" Value="60" />
    <Setter Property="Margin" Value="5" />
  </Style>

  <!-- FontIconButton -->
  <Style x:Key="FontIconButton" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
    <Setter Property="Width" Value="24" />
    <Setter Property="Height" Value="24" />
    <Setter Property="FontFamily" Value="Segoe UI Symbol" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Cursor" Value="{x:Static Cursors.Hand}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Focusable" Value="False" />
  </Style>

  <!-- IconButtonStyle -->
  <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
    <Setter Property="Margin" Value="1" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Focusable" Value="False" />
  </Style>

</ResourceDictionary>