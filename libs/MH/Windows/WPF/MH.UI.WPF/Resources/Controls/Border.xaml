<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="MH.S.Border.RoundDarker" TargetType="Border">
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="Black"/>
    <Setter Property="Background" Value="{DynamicResource MH.B.Black2}"/>
    <Setter Property="Padding" Value="2,0,2,2"/>
    <Setter Property="CornerRadius" Value="5"/>
    <Setter Property="Margin" Value="1"/>
    <Setter Property="MinWidth" Value="24"/>
  </Style>

  <Style x:Key="MH.S.Border.RoundDark" TargetType="Border" BasedOn="{StaticResource MH.S.Border.RoundDarker}">
    <Setter Property="Background" Value="{DynamicResource MH.B.Black5}"/>
  </Style>
</ResourceDictionary>