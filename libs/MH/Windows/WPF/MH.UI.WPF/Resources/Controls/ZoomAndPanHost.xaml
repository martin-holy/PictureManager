<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:MH.UI.WPF.Controls">

  <Style x:Key="MH.S.ZoomAndPanHost" TargetType="c:ZoomAndPanHost">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="c:ZoomAndPanHost">
          <Canvas
            x:Name="PART_Canvas"
            DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">

            <ContentPresenter
              x:Name="PART_Content"
              Content="{Binding Content}"
              RenderTransformOrigin="0,0"
              Width="{Binding ZoomAndPan.ContentWidth}"
              Height="{Binding ZoomAndPan.ContentHeight}">

              <ContentPresenter.RenderTransform>
                <TransformGroup>
                  <ScaleTransform
                    ScaleX="{Binding ZoomAndPan.ScaleX}"
                    ScaleY="{Binding ZoomAndPan.ScaleY}"/>

                  <TranslateTransform
                    x:Name="PART_ContentTransform"
                    X="{Binding ZoomAndPan.TransformX}"
                    Y="{Binding ZoomAndPan.TransformY}"/>
                </TransformGroup>
              </ContentPresenter.RenderTransform>
            </ContentPresenter>
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>