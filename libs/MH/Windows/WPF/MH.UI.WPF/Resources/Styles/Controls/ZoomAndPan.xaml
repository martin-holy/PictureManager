<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:MH.UI.WPF.Controls">

  <Style x:Key="MH.Styles.Controls.ZoomAndPan" TargetType="{x:Type c:ZoomAndPan}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type c:ZoomAndPan}">
          <Canvas
            x:Name="PART_Canvas"
            DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">

            <ContentPresenter
              x:Name="PART_Content"
              Content="{Binding Content}"
              RenderTransformOrigin="0,0"
              Width="{Binding ContentWidth}"
              Height="{Binding ContentHeight}">

              <ContentPresenter.RenderTransform>
                <TransformGroup>
                  <ScaleTransform
                    ScaleX="{Binding ScaleX}"
                    ScaleY="{Binding ScaleY}"/>

                  <TranslateTransform
                    x:Name="PART_ContentTransform"
                    X="{Binding TransformX}"
                    Y="{Binding TransformY}"/>
                </TransformGroup>
              </ContentPresenter.RenderTransform>
            </ContentPresenter>
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>