<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:vml="clr-namespace:MH.UI.WPF.Sample.ViewModels.Layout">

  <DataTemplate DataType="{x:Type vml:LeftContentVM}">
    <TabControl Style="{StaticResource MH.Styles.BaseControls.TabControl-Slot}">
      <mhc:Slots.List>
        <mhc:Slot
          Name="TabStripSlot"
          Placement="Right"
          Content="{StaticResource MH.Res.SlidePanel-PinButton}"/>
      </mhc:Slots.List>
    </TabControl>
  </DataTemplate>
</ResourceDictionary>