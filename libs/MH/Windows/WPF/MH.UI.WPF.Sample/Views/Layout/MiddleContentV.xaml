<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:vml="clr-namespace:MH.UI.WPF.Sample.ViewModels.Layout"
  xmlns:ap="clr-namespace:MH.UI.WPF.AttachedProperties;assembly=MH.UI.WPF">

  <DataTemplate DataType="{x:Type vml:MiddleContentVM}">
    <TabControl
      Style="{StaticResource MH.Styles.BaseControls.TabControl-Slot}"
      TabStripPlacement="Left"
      SelectedIndex="0">

      <mhc:Slots.List>
        <mhc:Slot Name="TabStripSlot" Placement="Top">
          <mhc:Slot.Content>
            <mhc:IconButton
              ap:Icon.Data="{StaticResource IconBug}"
              ap:Icon.Size="15"
              Width="24"
              Height="24"/>
          </mhc:Slot.Content>
        </mhc:Slot>
      </mhc:Slots.List>
    </TabControl>
  </DataTemplate>
</ResourceDictionary>