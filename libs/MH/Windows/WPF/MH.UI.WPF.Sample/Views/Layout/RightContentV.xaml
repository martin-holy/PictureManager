<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:wpfu="clr-namespace:MH.UI.WPF.Utils;assembly=MH.UI.WPF"
  xmlns:vml="clr-namespace:MH.UI.WPF.Sample.ViewModels.Layout">

  <DataTemplate DataType="{x:Type vml:RightContentVM}">
    <DataTemplate.Resources>
      <ResourceDictionary>
        <!--TODO it should be here or outside of the DataTemplate?-->
        <ResourceDictionary.MergedDictionaries>
          <wpfu:CachedResourceDictionary Source="/Views/Controls/FolderTreeViewV.xaml"/>
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </DataTemplate.Resources>

    <Grid Background="{StaticResource MH.B.C.Static.Ba}">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <ContentPresenter Content="{Binding SelectedFolder}" Grid.Row="0" Margin="4,0,0,0"/>
      <ContentPresenter Content="{Binding SlidePanelPinButton}" Grid.Row="0" HorizontalAlignment="Right"/>
      <ContentPresenter Content="{Binding FolderTreeView}" Grid.Row="1"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>