<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vmc="clr-namespace:MH.UI.WPF.Sample.ViewModels.Controls">

  <DataTemplate DataType="{x:Type vmc:ColorsVM}">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0" Orientation="Vertical">
        <TextBlock Text="Accent1" Background="{DynamicResource MH.B.Accent1}"/>
        <TextBlock Text="Accent2" Background="{DynamicResource MH.B.Accent2}"/>
        <TextBlock Text="Accent3" Background="{DynamicResource MH.B.Accent3}"/>
        <TextBlock Text="Accent4" Background="{DynamicResource MH.B.Accent4}"/>
        <TextBlock Text="Accent5" Background="{DynamicResource MH.B.Accent5}"/>
        <TextBlock Text="Accent6" Background="{DynamicResource MH.B.Accent6}"/>
        <TextBlock Text="Accent7" Background="{DynamicResource MH.B.Accent7}"/>
        <TextBlock Text="Accent8" Background="{DynamicResource MH.B.Accent8}"/>
        <TextBlock Text="Accent9" Background="{DynamicResource MH.B.Accent9}"/>
        <TextBlock Text="Accent" Background="{DynamicResource MH.B.Accent}"/>
        <TextBlock Text="Accent-Dark" Background="{DynamicResource MH.B.Accent-Dark}"/>
      </StackPanel>

      <StackPanel Grid.Column="1" Orientation="Vertical">
        <TextBlock Text="White1" Background="{DynamicResource MH.B.White1}"/>
        <TextBlock Text="White2" Background="{DynamicResource MH.B.White2}"/>
        <TextBlock Text="White3" Background="{DynamicResource MH.B.White3}"/>
        <TextBlock Text="White4" Background="{DynamicResource MH.B.White4}"/>
        <TextBlock Text="White5" Background="{DynamicResource MH.B.White5}"/>
        <TextBlock Text="White6" Background="{DynamicResource MH.B.White6}"/>
        <TextBlock Text="White7" Background="{DynamicResource MH.B.White7}"/>
        <TextBlock Text="White8" Background="{DynamicResource MH.B.White8}"/>
        <TextBlock Text="White9" Background="{DynamicResource MH.B.White9}"/>
        <TextBlock Text="White" Background="{DynamicResource MH.B.White}"/>
      </StackPanel>

      <StackPanel Grid.Column="2" Orientation="Vertical">
        <TextBlock Text="Black1" Background="{DynamicResource MH.B.Black1}"/>
        <TextBlock Text="Black2" Background="{DynamicResource MH.B.Black2}"/>
        <TextBlock Text="Black3" Background="{DynamicResource MH.B.Black3}"/>
        <TextBlock Text="Black4" Background="{DynamicResource MH.B.Black4}"/>
        <TextBlock Text="Black5" Background="{DynamicResource MH.B.Black5}"/>
        <TextBlock Text="Black6" Background="{DynamicResource MH.B.Black6}"/>
        <TextBlock Text="Black7" Background="{DynamicResource MH.B.Black7}"/>
        <TextBlock Text="Black8" Background="{DynamicResource MH.B.Black8}"/>
        <TextBlock Text="Black9" Background="{DynamicResource MH.B.Black9}"/>
        <TextBlock Text="Black" Background="{DynamicResource MH.B.Black}"/>
      </StackPanel>
    </Grid>
  </DataTemplate>
</ResourceDictionary>