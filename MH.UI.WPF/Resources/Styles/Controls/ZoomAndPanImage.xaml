<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:MH.UI.WPF.Controls">

  <Style x:Key="MH.Styles.Controls.ZoomAndPanImage" TargetType="{x:Type c:ZoomAndPanImage}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type c:ZoomAndPanImage}">
          <Canvas
            x:Name="PART_Canvas"
            DataContext="{Binding RelativeSource=
                         {RelativeSource AncestorType={x:Type c:ZoomAndPanImage}}}">

            <Image
              x:Name="PART_Image"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              RenderTransformOrigin="0,0"
              Height="{Binding ImageHeight}"
              Width="{Binding ImageWidth}"
              Source="{Binding ImageSource}">

              <Image.RenderTransform>
                <TransformGroup>
                  <ScaleTransform
                    ScaleX="{Binding ScaleX}"
                    ScaleY="{Binding ScaleY}"/>

                  <TranslateTransform
                    x:Name="PART_ImageTransform"
                    X="{Binding TransformX}"
                    Y="{Binding TransformY}"/>
                </TransformGroup>
              </Image.RenderTransform>
            </Image>
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>