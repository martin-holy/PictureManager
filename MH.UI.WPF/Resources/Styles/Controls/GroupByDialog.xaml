<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:wpfc="clr-namespace:MH.UI.WPF.Controls"
  xmlns:uid="clr-namespace:MH.UI.Dialogs;assembly=MH.UI">

  <DataTemplate x:Key="MH.UI.Dialogs.GroupByDialog`1" DataType="{x:Type uid:GroupByDialog`1}">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="300"/>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>

      <wpfc:TreeViewBase
        Style="{StaticResource MH.Styles.Controls.TreeViewBase}"
        SelectAction="{Binding SelectAction}"
        ItemsSource="{Binding Root.Items}"
        ItemTemplate="{StaticResource MH.Utils.BaseClasses.TreeItem}"
        ItemContainerStyle="{StaticResource MH.Styles.Controls.TreeViewItemBaseWithSelection}"/>
      
      <StackPanel Grid.Row="1" Orientation="Horizontal">
        <RadioButton
          IsChecked="{Binding ModeGroupBy}"
          Content="Group by"
          Margin="5"/>

        <RadioButton
          IsChecked="{Binding ModeGroupByThenBy}"
          Content="Group by - Then by"
          Margin="5"/>
      </StackPanel>

      <CheckBox
        Grid.Row="2"
        IsChecked="{Binding ModeGroupRecursive}"
        Content="Group recursive"
        Margin="5"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>