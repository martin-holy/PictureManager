<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:MH.UI.WPF.Controls">

  <Style x:Key="MH.Styles.Controls.SlidePanel" TargetType="{x:Type c:SlidePanel}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type c:SlidePanel}">
          <ContentPresenter/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <c:IconToggleButton
    x:Key="SlidePanel-PinButton"
    x:Shared="False"
    Icon="{StaticResource IconPin}"
    Width="20"
    Height="20"
    IsThreeState="False"
    IsChecked="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=c:SlidePanel}, FallbackValue=False}"
    ToolTip="Pin panel"/>
</ResourceDictionary>