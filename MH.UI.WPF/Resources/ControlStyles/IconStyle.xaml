<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:MH.UI.WPF.Controls">
    
  <Style x:Key="MH.UI.WPF.Controls.Icon" TargetType="{x:Type c:Icon}">
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="Opacity" Value="1" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type c:Icon}">
          <Path Data="{TemplateBinding Source}"
                Fill="{TemplateBinding Fill}"
                Width="{TemplateBinding Size}"
                Height="{TemplateBinding Size}"
                Stretch="Uniform"
                VerticalAlignment="Center" />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="Visibility" Value="Visible" />
    <Style.Triggers>
      <Trigger Property="IsIconVisible" Value="False">
        <Setter Property="Visibility" Value="Collapsed" />
      </Trigger>
      <Trigger Property="ShowShadow" Value="True">
        <Setter Property="Effect">
          <Setter.Value>
            <DropShadowEffect BlurRadius="2" Color="Black" Opacity="0.7" ShadowDepth="2" />
          </Setter.Value>
        </Setter>
      </Trigger>
    </Style.Triggers>
  </Style>
  
</ResourceDictionary>