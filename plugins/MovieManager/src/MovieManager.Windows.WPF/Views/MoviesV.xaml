<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:vm="clr-namespace:MovieManager.Common.ViewModels;assembly=MovieManager.Common">

  <DataTemplate DataType="{x:Type vm:MoviesVM}">
    <mhc:CollectionView View="{Binding}" InnerItemTemplate="{DynamicResource MM.Views.MovieV.Thumb}">
      <mhc:CollectionView.ItemsPanel>
        <ItemsPanelTemplate>
          <mhc:VirtualizingSingleItemScrollStackPanel/>
        </ItemsPanelTemplate>
      </mhc:CollectionView.ItemsPanel>
    </mhc:CollectionView>
  </DataTemplate>
</ResourceDictionary>