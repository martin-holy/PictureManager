<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:m="clr-namespace:MovieManager.Common.Models;assembly=MovieManager.Common">
    
  <DataTemplate DataType="{x:Type m:MovieM}">
    <Grid Background="Transparent">
      <ContentControl Content="{Binding Poster}" ContentTemplate="{StaticResource PM.T.MediaItemBase}"/>
      <TextBlock Text="{Binding Title}"/>
    </Grid>
    
  </DataTemplate>
</ResourceDictionary>