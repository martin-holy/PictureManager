<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:m="clr-namespace:MovieManager.Common.Models;assembly=MovieManager.Common">
    
  <DataTemplate x:Key="MM.Views.MovieV.Thumb" DataType="{x:Type m:MovieM}">
    <Grid Background="Transparent">
      <TextBlock
        Text="{Binding Title}"
        TextWrapping="Wrap"
        FontSize="16"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>

      <ContentControl
        Content="{Binding Poster}"
        ContentTemplate="{StaticResource PM.Views.MediaItemM.Thumb-Fill}"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>