<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:movie="clr-namespace:MovieManager.Common.Features.Movie;assembly=MovieManager.Common">
    
  <DataTemplate x:Key="MM.DT.Movie.Thumb" DataType="{x:Type movie:MovieM}">
    <Grid Background="Transparent">
      <TextBlock
        Text="{Binding Title}"
        TextWrapping="Wrap"
        FontSize="16"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>

      <ContentControl
        Content="{Binding Poster}"
        ContentTemplate="{StaticResource PM.DT.MediaItem.Thumb-Fill}"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>