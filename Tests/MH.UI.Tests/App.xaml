<Application x:Class="MH.UI.Tests.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mhc="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MH.UI.WPF;component/Resources/Styles/Control/IconButton.xaml" />
        <ResourceDictionary Source="/MH.UI.WPF;component/Resources/Styles/Control/IconToggleButton.xaml" />
      </ResourceDictionary.MergedDictionaries>
      
      <Style TargetType="{x:Type mhc:IconButton}" BasedOn="{StaticResource MH.Styles.Controls.IconButton}" />
      <Style TargetType="{x:Type mhc:IconToggleButton}" BasedOn="{StaticResource MH.Styles.Controls.IconToggleButton}" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
