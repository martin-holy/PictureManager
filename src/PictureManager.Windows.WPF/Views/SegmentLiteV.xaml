<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:m="clr-namespace:PictureManager.Common.Models;assembly=PictureManager.Common"
  xmlns:vm="clr-namespace:PictureManager.Common.ViewModels.Entities;assembly=PictureManager.Common"
  xmlns:pmConv="clr-namespace:PictureManager.Windows.WPF.Converters">

  <DataTemplate x:Key="PM.Views.SegmentLiteV" DataType="{x:Type m:SegmentM}">
    <Border
      BorderThickness="1"
      BorderBrush="Black"
      Margin="1">

      <Image
        Stretch="Fill"
        Width="{Binding Source={x:Static vm:SegmentVM.SegmentUiSize}}"
        Height="{Binding Source={x:Static vm:SegmentVM.SegmentUiSize}}">

        <Image.Source>
          <MultiBinding Converter="{x:Static pmConv:SegmentThumbnailSourceConverter.Inst}">
            <Binding Path="FilePathCache" IsAsync="True"/>
            <Binding/>
          </MultiBinding>
        </Image.Source>
      </Image>
    </Border>
  </DataTemplate>
</ResourceDictionary>