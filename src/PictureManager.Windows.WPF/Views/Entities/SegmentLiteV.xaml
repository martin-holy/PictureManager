<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:m="clr-namespace:PictureManager.Common.Models;assembly=PictureManager.Common"
  xmlns:pmConv="clr-namespace:PictureManager.Windows.WPF.Converters"
  xmlns:pm="clr-namespace:PictureManager.Common;assembly=PictureManager.Common">

  <DataTemplate x:Key="PM.Views.SegmentV.Lite" DataType="{x:Type m:SegmentM}">
    <Border
      BorderThickness="1"
      BorderBrush="Black"
      Margin="1">

      <Image
        Stretch="Fill"
        Width="{Binding Segment.SegmentUiSize, Source={x:Static pm:Core.VM}}"
        Height="{Binding Segment.SegmentUiSize, Source={x:Static pm:Core.VM}}">

        <Image.Source>
          <MultiBinding Converter="{x:Static pmConv:SegmentThumbnailSourceConverter.Inst}">
            <Binding Path="FilePathCache" IsAsync="True"/>
            <Binding/>
          </MultiBinding>
        </Image.Source>
      </Image>
    </Border>
  </DataTemplate>
</ResourceDictionary>