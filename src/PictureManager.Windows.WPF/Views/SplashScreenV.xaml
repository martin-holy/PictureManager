<Window
  x:Class="PictureManager.Windows.WPF.Views.SplashScreenV"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:v="clr-namespace:PictureManager.Windows.WPF.Views"
  Height="150"
  Width="500"
  FontSize="13.333"
  WindowStyle="None"
  WindowStartupLocation="CenterScreen" 
  ResizeMode="NoResize"
  ShowInTaskbar="False"
  Background="#FF252525"
  Foreground="White"
  BorderThickness="1"
  BorderBrush="{DynamicResource MH.B.Accent}">
  
  <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=v:SplashScreenV}}">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="20"/>
      <RowDefinition Height="20"/>
      <RowDefinition Height="20"/>
    </Grid.RowDefinitions>
    
    <TextBlock
      Grid.Row="0"
      Text="Picture Manager"
      FontWeight="Bold"
      FontSize="30"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"/>
    
    <TextBlock
      Grid.Row="1"
      Text="{Binding Version}"
      HorizontalAlignment="Center"/>
    
    <TextBlock
      Grid.Row="2"
      Text="{Binding Message}"
      HorizontalAlignment="Center"/>
    
    <ProgressBar
      Grid.Row="3"
      IsIndeterminate="True"
      Margin="4,0"
      Height="10"/>
  </Grid>
</Window>
